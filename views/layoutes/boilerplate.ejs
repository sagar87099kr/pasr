            <!-- Global Loader -->
            <style>
                #global-loader {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(255, 255, 255, 0.9);
                    z-index: 9999;
                    display: none;
                    /* Hidden by default */
                    justify-content: center;
                    align-items: center;
                    flex-direction: column;
                    gap: 15px;
                    backdrop-filter: blur(4px);
                }

                .loader-spinner {
                    width: 50px;
                    height: 50px;
                    border: 4px solid #e5e7eb;
                    border-top: 4px solid #111827;
                    /* Primary Dark Color */
                    border-radius: 50%;
                    animation: spin 0.8s linear infinite;
                }

                @keyframes spin {
                    0% {
                        transform: rotate(0deg);
                    }

                    100% {
                        transform: rotate(360deg);
                    }
                }

                .loader-text {
                    font-family: system-ui, -apple-system, sans-serif;
                    font-weight: 600;
                    color: #374151;
                    font-size: 16px;
                    animation: pulse 1.5s infinite ease-in-out;
                }

                @keyframes pulse {

                    0%,
                    100% {
                        opacity: 1;
                    }

                    50% {
                        opacity: 0.6;
                    }
                }
            </style>

            <div id="global-loader">
                <div class="loader-spinner"></div>
                <div class="loader-text">Storing your data, please wait...</div>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const loader = document.getElementById('global-loader');

                    // Show loader on valid form submission
                    document.addEventListener('submit', (e) => {
                        const form = e.target;

                        // If the form is invalid, let the browser show validation errors and DO NOT show loader
                        if (!form.checkValidity()) {
                            return;
                        }

                        // Check if it's a delete form (by action URL containing DELETE or class)
                        const isDelete = form.action.includes('?_method=DELETE') ||
                            form.classList.contains('delete-form') ||
                            (form.method && form.method.toUpperCase() === 'DELETE');

                        if (isDelete) {
                            return; // Don't show loader for delete
                        }

                        // If valid and not delete, show loader
                        loader.style.display = 'flex';
                    });

                    // Hide loader when page restores from back/forward cache
                    window.addEventListener('pageshow', (event) => {
                        if (event.persisted) {
                            loader.style.display = 'none';
                        }
                    });
                });
            </script>
